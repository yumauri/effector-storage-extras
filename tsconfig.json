{
  "compilerOptions": {
    "strict": true,
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es2018", "dom"],
    "types": [],
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "exclude": ["**/node_modules", "**/.*/"],
  "ts-node": { "files": true }
}
